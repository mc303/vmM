                    <ComboBox x:Name="cbbVMHostnameNumbering" HorizontalAlignment="Left" Margin="376,494,0,0" VerticalAlignment="Top" Width="87"/>
                    <Label x:Name="label4_Copy1" Content="VM Hostname" HorizontalAlignment="Left" Margin="157,490,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.081,0.5"/>
                    <TextBox x:Name="txtVMHostnamePrefix" TextAlignment="Right" HorizontalAlignment="Left" Height="22" Margin="240,494,0,0" VerticalAlignment="Top" Width="134" MaxLines="1" RenderTransformOrigin="0.446,0.451"/>
                    <Label x:Name="label2_Copy" Content="Full Clone deployment options:" HorizontalAlignment="Left" Margin="152,57,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label x:Name="label2_Copy1" Content="XenDesktop deployement options:" HorizontalAlignment="Left" Margin="152,211,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <CheckBox x:Name="chkbUpdateHostedMachineID" Content="Add/Update Machine in XenDesktop " HorizontalAlignment="Left" Margin="155,239,0,0" VerticalAlignment="Top" IsThreeState="False"/>
                    <Button x:Name="cmdDeployLinkedCloneVM" Content="Deploy Pooled VMs" HorizontalAlignment="Right" Margin="0,0,10,10" Padding="10,1" ScrollViewer.CanContentScroll="True" Height="20" VerticalAlignment="Bottom"/>
                    <Button x:Name="cmdDeployLinkedCloneVMRefresh" Content="Click to populate all options" HorizontalAlignment="Left" Margin="399,7,0,0" VerticalAlignment="Top" Width="191"/>
                    <CheckBox x:Name="chkbGuestinfoHostname" Content="guestinfo.hostname=vmname" Visibility="Hidden" HorizontalAlignment="Left" Margin="161,547,0,0" VerticalAlignment="Top" IsThreeState="False"/>
                    <ComboBox x:Name="cbbXenHypervisorConnection" HorizontalAlignment="Left" Margin="156,286,0,0" VerticalAlignment="Top" Width="407"/>
                    <Label x:Name="lblXenHypervisorConnection" Content="Hypervisor Connection" HorizontalAlignment="Left" Margin="27,284,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="chkbDLCVMPowerOn" Content="Power On deployed VM" HorizontalAlignment="Left" Margin="161,547,0,0" VerticalAlignment="Top" IsThreeState="False"/>
                    <Label x:Name="lblHostnameCount" Content="NetBIOS Name max 15 characters" HorizontalAlignment="Left" Margin="461,490,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="chkbADCreateComputerAccount" Content="Create Computer Account if not Exists" HorizontalAlignment="Left" Margin="155,391,0,0" VerticalAlignment="Top" IsThreeState="False"/>
                    <ComboBox x:Name="cbbADOU" HorizontalAlignment="Left" Margin="156,411,0,0" VerticalAlignment="Top" Width="407"/>
                    <Label x:Name="lblADOU" Content="OU" HorizontalAlignment="Left" Margin="131,409,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="lblXenMachineCatalog" Content="Machine Catalog" HorizontalAlignment="Left" Margin="59,311,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbbXenMachineCatalog" HorizontalAlignment="Left" Margin="156,313,0,0" VerticalAlignment="Top" Width="407"/>
                    <ComboBox x:Name="cbbXenDeliveryGroup" HorizontalAlignment="Left" Margin="156,340,0,0" VerticalAlignment="Top" Width="407"/>
                    <Label x:Name="lblXenDeliveryGroup" Content="Delivery Group" HorizontalAlignment="Left" Margin="69,338,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="cmdRefreshParentVM" Content="R" HorizontalAlignment="Left" Margin="568,33,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <Button x:Name="cmdRefreshDatastore" Content="R" HorizontalAlignment="Left" Margin="568,105,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <Button x:Name="cmdRefreshFolder" Content="R" HorizontalAlignment="Left" Margin="568,132,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <Button x:Name="cmdRefreshXDhyp" Content="R" HorizontalAlignment="Left" Margin="568,259,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <Button x:Name="cmdRefreshHypervisorConnection" Content="R" HorizontalAlignment="Left" Margin="568,286,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <Button x:Name="cmdRefreshMachineCatalog" Content="R" HorizontalAlignment="Left" Margin="568,313,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <Button x:Name="cmdRefreshDeliveryGroup" Content="R" HorizontalAlignment="Left" Margin="568,340,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
