                    <Label x:Name="lblVMMemoryReservationInGBGB" Content="GB" HorizontalAlignment="Left" Margin="214,185,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.081,0.5"/>
                    <Label x:Name="label2_Copy3" Content="Select VDI deployement options:" HorizontalAlignment="Left" Margin="152,516,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
