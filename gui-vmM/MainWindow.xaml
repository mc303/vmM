                    <Label x:Name="label4" Content="Total VMs to Deploy" HorizontalAlignment="Left" Margin="305,463,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="txtVMSDeploy" HorizontalAlignment="Left" Height="22" Margin="420,467,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="43" MaxLines="1" MaxLength="4" RenderTransformOrigin="0.446,0.451"/>
                    <Label x:Name="label4_Copy" Content="VM Start number" HorizontalAlignment="Left" Margin="156,463,0,0" VerticalAlignment="Top"/>
