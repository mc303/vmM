                    <Label x:Name="lblADUsername" Content="AD Username:" HorizontalAlignment="Left" Margin="34,329,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.045,0.576"/>
                    <Label x:Name="lblADPasswd" Content="AD Password:" HorizontalAlignment="Left" Margin="37,356,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.045,0.576"/>
                    <PasswordBox x:Name="txtADPasswd" HorizontalAlignment="Left" Margin="116,360,0,0" VerticalAlignment="Top" Width="528" Height="22" Password=""/>
                    <TextBox x:Name="txtADDNSSuffix" HorizontalAlignment="Left" Height="22" Margin="117,198,0,0" TextWrapping="NoWrap" Text="eu.domain.local" VerticalAlignment="Top" Width="528"/>
                    <Label x:Name="lblADDNSSuffix" Content="DNS Suffixe:" HorizontalAlignment="Left" Margin="45,194,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.045,0.576"/>
